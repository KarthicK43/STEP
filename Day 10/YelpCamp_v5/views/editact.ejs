<%- include("partials/header.ejs") %>
<div class="container">
	<div class="row">
		<h1 class="text-center">
			Edit Actor Details
		</h1>
		<form id="formadd" action="/actors/<%=actor._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<input type="text" value="<%=actor.name%>" name="actor[name]" class="form-control">
			</div>
			<div class="form-group">
				<input type="text" value="<%=actor.image%>" name="actor[image]" class="form-control">
			</div>
			<div class="form-group">
				<input type="text" value="<%=actor.description%>" name="actor[description]" class="form-control">
			</div>
			<div class="form-group">
				<button type="submit" id="butform" class="btn btn-success btn-lg btn-block form-control">
					Update
				</button>
			</div>
		</form>
		<a href="/actors/<%=actor._id%>">Back</a>
	</div>
</div>
<%- include("partials/footer.ejs") %>