<%- include("partials/header.ejs") %>
<div class="container">
	<div class="row">
		<h1 class="text-center">
			Edit Comment
		</h1>
		<form id="formadd" action="/actors/<%=actor_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
			<div class="form-group">
                <input type="text" value="<%=comment.text%>" name="comment[text]" class="form-control">
			</div>
			<div class="form-group">
				<button id="butform" type="submit" class="btn btn-success btn-lg btn-block form-control">
					Update Comment
				</button>
			</div>
		</form>
		<a href="/actors/<%=actor_id%>">Back</a>
	</div>
</div>
<%- include("partials/footer.ejs") %>