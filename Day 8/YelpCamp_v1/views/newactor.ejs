<%- include("partials/header.ejs") %>
<div class="container">
	<div class="row">
		<h1 class="text-center">
			Add a New Actor
		</h1>
		<form action="/actors" method="POST" style="width:30%; margin:30px auto;">
			<div class="form-group">
				<input type="text" placeholder="Name" name="name" class="form-control">
			</div>
			<div class="form-group">
				<input type="text" placeholder="Image URL" name="image" class="form-control">
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-success btn-lg btn-block form-control" style="padding:4px;">
					Add
				</button>
			</div>
		</form>
		<a href="/actors">Back</a>
	</div>
</div>
<%- include("partials/footer.ejs") %>