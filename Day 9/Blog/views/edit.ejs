<%- include("partials/header") %>
<div style="height:10%"></div>
<div class="ui main text container segment">
    <div class="ui huge header">
        <p>Edit <%=blog.name%></p>
    </div>
    <form class="ui form" action="/shows/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[name]" value="<%=blog.name%>">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" value="<%=blog.image%>"" name="blog[image]">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"><%=blog.body%></textarea>
        </div>
        <div class="field">
            <button type="submit" class="ui basic blue button">Update</button>
        </div>
    </form>
</div>
<%- include("partials/footer") %>
